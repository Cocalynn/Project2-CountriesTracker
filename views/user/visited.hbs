    <div class="container mt-5">
        <h5>Hello {{currentUser.username}}! Your ID is <span id="user-id">{{currentUser._id}}</span></h5>
        <h6>Document your travels here!</h6>
        <div class="row">
            <div class="col-lg-8 mb-5">
                <div id="chartdiv" style="width: 100%; height: 500px;"></div>
            </div>
            <div class="col-lg-4">
                <div class="row g-3">
                    <div class="col">
                        <div >
                            <span class="input-group-text mb-1 text-center">Departure</span>
                            <span class="form-control mb-1" id="country-departure"></span>
                            <button id="country-departure-confirm" class="btn btn-primary form-control">Confirm</button>
                        </div>
                    </div>
                    <div class="col">
                        <div >
                            <span class="input-group-text mb-1">Arrival</span>
                            <span class="form-control mb-1" id="country-arrival"></span>
                            <button id="country-arrival-confirm" class="btn btn-primary form-control">Confirm</button>
                        </div>
                    </div>
                </div>
                <div class="d-grid mt-2 w">
                    <button id="journey-confirm" class="btn btn-success form-control">Document this Travel</button>
                </div>
                <div id="travel-records" class="mt-3" style="height: 300px; overflow-y: scroll;" >
                    {{#each currentUser.visitedCountries}}
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <div>Departure: {{this.from.country}}</div>
                                    <div>Arrival: {{this.to.country}}</div>
                                </div>
                                <form action="/visited/{{this._id}}/delete/{{this.to.country}}" method="post">
                                    <button class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

<script src="/js/script.js"></script>
<script src="//cdn.amcharts.com/lib/5/index.js"></script>
<script src="//cdn.amcharts.com/lib/5/map.js"></script>
<script src="//cdn.amcharts.com/lib/5/geodata/worldLow.js"></script>
<script src="//cdn.amcharts.com/lib/5/themes/Animated.js"></script>
<script src="//cdn.amcharts.com/lib/5/plugins/exporting.js"></script>
<script src="/js/map-line-series.js"></script>


